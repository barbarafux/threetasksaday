<div class="row centered">
<%= form_for(@task) do |f| %>
  <% if @task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
      <% @task.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="container-fluid">
  <div class="row">
    <div class="col-md-8">
        <div class="field">
          <%= f.text_field :task, class: "form-control"  %>
        </div>
    </div>

    <div class="col-md-4">
        <div class="actions">
          <%= f.submit t(:create_task), class: "btn btn-primary"  %>
          <%= link_to t(:back), tasks_path, class: "btn btn-link" %>
        </div>
<% end %>
    </div>
  </div>
</div>
</div>
