source 'https://rubygems.org'
ruby "2.6.3"

gem 'rails', '5.1.1'


# - DATABASE -
gem 'mysql2', '~> 0.4.6'                         # MYSQL as the database for Active Record

gem 'sass-rails', '~> 5.0.6'                     # Use SCSS for stylesheets
